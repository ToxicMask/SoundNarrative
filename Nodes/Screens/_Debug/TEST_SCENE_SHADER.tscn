	vec4 screenPixel = texture(SCREEN_TEXTURE, SCREEN_UV);
	vec4 rotatedPixel = texture(SCREEN_TEXTURE, rotateUV(SCREEN_UV, vec2(0.5), 1.0));
	vec2 gradientUV = vec2(texturePixel.r, 0);
	vec4 gradientPixel = texture(colorGradient, gradientUV);
	
	vec4 finalPixel =  mix(screenPixel, rotatedPixel, 1.0-texturePixel.r);
	
	COLOR = finalPixel;
}"

